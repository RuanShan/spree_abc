<%
 @site ||= SpreeTheme.site_class.new
 @user ||= @site.users.build
%>
<%= form_for :site, :url => quick_lunch_path do |f| %>
    <div >
        <p>
          <%= f.text_field :name, :class => 'fullwidth title', :placeholder => Spree.t(:name_store)  %>
        </p>
        <p>
          <%= email_field :user, :email, :placeholder => Spree.t(:email)%>
        </p>
        <p>
          <%= password_field :user,:password, :placeholder=>Spree.t(:password) %>
        </p>
        <p><%= f.button Spree.t(:create), :class => 'button primary' %></p>
    </div>
<% end %>
