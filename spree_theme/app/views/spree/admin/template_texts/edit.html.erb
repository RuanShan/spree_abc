<%= render :partial => 'sub_menu' %>
<% content_for :page_title do %>
   <%= t("static_content.static_pages") %> <i class="icon-arrow-right"></i> <%= t("static_content.editing_page") %> "<%= @template_text.title%>"
<% end %>

<% content_for :page_actions do %>
  <li><%= button_link_to t(:back_to_static_pages_list), spree.admin_template_texts_url, :icon => 'icon-arrow-left' %></li>
<% end %>

<%= render "spree/shared/error_messages", :target => @template_text %>

<%= form_for [:admin, @template_text] do |f| %>
  <fieldset class="no-border-top">
    <%= render :partial => 'form', :locals => { :f => f } %>
    <%= render :partial => 'spree/admin/shared/edit_resource_links' %>
  </fieldset>
<% end %>
