<%= render :partial => 'sub_menu' %>
<h1>Listing themes</h1>

<table>
  <tr>
    <th>TemplateTheme</th>
    <th>IsApplied</th>
    
  </tr>

<% @themes.each do |theme| %>
  <tr>
    <td><%= theme.title %></td>
    <td><%= theme.applied? %></td>
    <td class="actions">
    <%= link_to 'Config', config_admin_template_theme_path(theme), {:method=>:get} %>
    <%= link_to 'Apply', apply_admin_template_theme_path(theme), {:method=>:post} %>
              &nbsp;
    <% if SpreeTheme.site_class.current.design? %>    
      <%= link_to 'Copy', copy_admin_template_theme_path(theme), {:method=>:post} %>
      <%= link_to 'Preview', preview_template_theme_path(theme) %>
      <%= link_to_if theme.has_native_layout?, 'Release', release_admin_template_theme_path(theme), {:method=>:post} %>
    <% end %>
    <%= link_to_delete theme, :no_text => true if can?(:delete, theme)  %>
    </td>
  </tr>
<% end %>
</table>

<br />

